<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>EmployeeManagementSystem</display-name>
  <servlet>
    <servlet-name>AdminValidation</servlet-name>
    <servlet-class>com.ems.controller.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminValidation</servlet-name>
    <url-pattern>/adminValidation</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminDashboard</servlet-name>
    <servlet-class>com.ems.controller.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminDashboard</servlet-name>
    <url-pattern>/AdminDashboard</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>LogoutAdmin</servlet-name>
  	<servlet-class>com.ems.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LogoutAdmin</servlet-name>
  	<url-pattern>/LogoutAdmin</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  
  <servlet>
    <servlet-name>EmployeeServlet</servlet-name>
    <servlet-class>com.ems.controller.EmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeServlet</servlet-name>
    <url-pattern>/employeeServlet</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>EmployeeUpdateServlet</servlet-name>
  	<servlet-class>com.ems.controller.EditEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeeUpdateServlet</servlet-name>
  	<url-pattern>/editEmployee</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>DeleteEmployee</servlet-name>
  	<servlet-class>com.ems.controller.DeleteEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>DeleteEmployee</servlet-name>
  	<url-pattern>/deleteEmployee</url-pattern>
  </servlet-mapping>
  

  <servlet>
  	<servlet-name>AddDepartment</servlet-name>
  	<servlet-class>com.ems.controller.DepartmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddDepartment</servlet-name>
  	<url-pattern>/addDepartment</url-pattern>
  </servlet-mapping>
  
</web-app>